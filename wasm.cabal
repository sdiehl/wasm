name:                wasm
version:             0.1
license:             MIT
license-file:        LICENSE
author:              Stephen Diehl
maintainer:          stephen.m.diehl@gmail.com
build-type:          Simple
extra-source-files:
  README.md
  src/Language/Wasm/Parser.y
  src/Language/Wasm/Lexer.x
cabal-version:       >=1.10

library
  exposed-modules:
    Language.Wasm.Core
    Language.Wasm.Entry
    Language.Wasm.Eval
    Language.Wasm.Monad
    Language.Wasm.Position
    Language.Wasm.Pretty
    Language.Wasm.Syntax
    Language.Wasm.Verify
    Language.Wasm.Binary
    Language.Wasm.Builder
    Language.Wasm.Hex

  ghc-options:
    -W
    -Wwarn
    -fwarn-incomplete-patterns

  other-modules:
    Language.Wasm.Parser
    Language.Wasm.Lexer

  build-depends:
    base                 >= 4.6   && <5.0,
    array                >= 0.5   && <0.6,
    text                 >= 1.1   && <1.3,
    bytestring           >= 0.10  && <0.11,
    mtl                  >= 2.2   && <3.0,
    transformers         >= 0.4   && <0.6,
    pretty               >= 1.1   && <1.2,
    pretty-show          >= 1.6   && <1.7,
    process              >= 1.1   && <1.5,
    directory            >= 1.2   && <1.4,
    containers           >= 0.5   && <0.6,
    binary               >= 0.7   && <0.9,
    cereal               >= 0.4   && <0.6,
    ansi-wl-pprint       >= 0.6   && <0.7,
    optparse-applicative >= 0.11  && <0.14

  hs-source-dirs:        src
  default-language:      Haskell2010

  build-tools:
    alex >= 3.1.3,
    happy >= 1.9.4

executable wasm
  main-is:               Main.hs

  build-depends:
    wasm                 == 0.1,
    base                 >= 4.6   && <5.0

  hs-source-dirs:        exec
  default-language:      Haskell2010

  build-tools:
    alex >= 3.1.3,
    happy >= 1.9.4

test-suite test
  build-depends:
    wasm                 == 0.1,
    base                 >= 4.6     && <5.0,
    filepath             >= 1.3     && <1.5,
    bytestring           >= 0.10  && <0.11,
    cereal               >= 0.4   && <0.6,
    -- Testing machinery
    tasty                >= 0.7,
    tasty-hunit          >= 0.4.1   && <0.10,
    tasty-golden         >= 2.2     && <2.4,
    io-capture           == 0.3,
    mtl                  == 2.2.1

  type:                exitcode-stdio-1.0
  default-language:    Haskell2010

  build-tools:
    alex >= 3.1.3,
    happy >= 1.9.4

  hs-source-dirs:      tests
  main-is:             Test.hs
